{
  "name": "markdown-it-hubski",
  "version": "1.0.0",
  "description": "Markdown-It pluging for hubski markdown extensions",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack",
    "test": "ava",
    "lint": "eslint --ignore-path .gitignore src tests",
    "esw": "esw -w --ignore-path .gitignore src tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markbahnman/markdown-it-hubski.git"
  },
  "keywords": [
    "markdown",
    "hubski",
    "markdown-it-plugin",
    "markdown-it"
  ],
  "author": "Mark Bahnman <mark.bahnman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markbahnman/markdown-it-hubski/issues"
  },
  "homepage": "https://github.com/markbahnman/markdown-it-hubski#readme",
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^2.9.0",
    "eslint-plugin-ava": "^2.3.1",
    "eslint-watch": "^2.1.11",
    "expose-loader": "^0.7.1",
    "json-loader": "^0.5.4",
    "markdown-it": "^6.0.1",
    "webpack": "^1.13.0"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "require": [
      "babel-core/register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "emcaVersion": 7,
      "sourceType": "module",
      "emcaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/assertion-arguments": "error",
      "ava/assertion-message": [
        "off",
        "always"
      ],
      "ava/max-asserts": [
        "off",
        5
      ],
      "ava/no-cb-test": "off",
      "ava/no-identical-title": "error",
      "ava/no-ignored-test-files": "error",
      "ava/no-invalid-end": "error",
      "ava/no-only-test": "error",
      "ava/no-skip-assert": "error",
      "ava/no-skip-test": "error",
      "ava/no-statement-after-end": "error",
      "ava/no-todo-test": "warn",
      "ava/no-unknown-modifiers": "error",
      "ava/prefer-power-assert": "off",
      "ava/test-ended": "error",
      "ava/test-title": [
        "error",
        "if-multiple"
      ],
      "ava/use-t-well": "error",
      "ava/use-t": "error",
      "ava/use-test": "error",
      "ava/use-true-false": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ]
    }
  }
}
